<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/problem_list"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ruogu.codersanswerpro.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/problem_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/problem_list_title"
        android:textSize="30sp"
        android:textColor="@color/main_theme" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/problem_list_view"
        android:layout_below="@+id/problem_list_title"
        android:choiceMode="singleChoice"
        android:scrollbars="none"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />

</RelativeLayout>